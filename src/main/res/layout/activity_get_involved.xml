<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawable.layout6"
    tools:context=".GetInvolvedActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/get_app_bar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:layout_marginTop="100dp"
    android:columnCount="2"
    android:layout_weight="8"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/volunteer"
        android:layout_width="wrap_content"
        android:layout_weight="8"
        android:background="@android:color/transparent"
        android:layout_margin="40dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/volunteers_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/testemonies"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/testemonies"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testemonies"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="140dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/job_listing"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_margin="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/job_listing"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Listings"
                android:layout_marginTop="140dp"
                android:textSize="22sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/donations"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:src="@drawable/donations"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donations"
                android:textSize="22sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="140dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>

</LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_get"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        android:layout_marginBottom="3dp"
        android:background="#F8D0CA"
        app:itemIconSize="40dp"

        app:itemTextColor="#AE5615"
        app:menu="@menu/get_menu">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>