<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable.layout"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    tools:context=".AboutCancerActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/about_main_layout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">


                <include
                    android:id="@+id/about_app_bar"
                    layout="@layout/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></include>

                <LinearLayout
                    android:id="@+id/about_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/about_main_layout"
                    android:orientation="vertical">

                    <Button

                        android:id="@+id/about_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:text="What is Breast Cancer?"
                        android:textColor="#DF050505"
                        android:background="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold">

                    </Button>

                    <TextView
                        android:id="@+id/about_summary_into"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Breast cancer is when abnormal cells in the breast begin to grow and divide,
in an controlled way and eventually form a growth(tumor).
Breast cancer starts in the breast tissue,most commonly
in the cells that line the milk ducts of the breast. \n\nThese cancer cells can
then invade surrounding tissues or spread (metastasize) to other areas of the
body.
 It is the common cancer in Namibia. It
mainly affects women, but men can get it too."
                        android:textSize="16sp"
                        android:textStyle="normal">

                    </TextView>


                    <ImageView
                        android:id="@+id/about_into_pic"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/about_layout1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/cancerinto" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/about_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_into_pic"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"

                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:text=" What Causes Breast Cancer to Develop?"
                        android:textColor="#DF090909"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Cancer begins in the cells which are the basic
building blocks that make up tissue. Sometimes,
 the process of cell growth goes wrong and new cells form when the body doesn't need them and old or damaged cells do not die as they should.

 \n\n These changes or mutations in DNA can cause a build up of cells which often
  forms a mass of tissue called a lump , growth or tumor.
Certain DNA changes are passed on from parents(Inherited)
and can greatly increase your risk of breast cancer.

"
                        android:textSize="16sp"
                        android:textStyle="normal">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:text="Breast cancer occurs when malignant tumors develop in the breast.
These cells can spread by breaking away from the original tumor and entering blood vessels or lymph vessels,
which branch into tissues throughout the body. \n\nWhen cancer cells travel to other parts of the body and begin damaging other tissues and organs,  the process is called
"
                        android:textSize="16sp"
                        android:textStyle="normal"></TextView>



                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="Where it starts"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#DF050505"
                    android:background="@android:color/white"
                    android:textSize="20sp"
                    android:layout_height="wrap_content">

                </Button>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/arm"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Breast Cancer most commonly starts in the cell that aligns the ducts of the breast or within the lobules (called carcinoma).
In rare cases, other cancer types can also occur in the breast, such as lymphomas (cancer of the lymphatic system) or sarcomas(cancer of the soft tissue). \n\n
 \n Although a lump in the breast is a common symptom of breast cancer, not all breast cancers have obvious symptoms. Some lumps may be too small to be felt, but can be detected with a
 screening mammogram or other tests.\n\n There are also some non-cancerous conditions that can cause lumps in the breasts, such as cysts. If you notice
 any new lumps or other unusual breast changes, please consult with your doctor."
>
        </TextView>


    </LinearLayout>

</LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#DF070707"
                    android:background="@color/white"
                    android:text=" The Breast structure"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </Button>
   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/about_layout3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_layout2"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text=" Breasts are made up:"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text= "fat"
                        android:textSize="16sp"
                        android:textStyle="normal">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="connective tissue"
                        android:textSize="16sp"
                        android:textStyle="normal">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="a network of ducts or milk ducts"
                        android:textSize="16sp"
                        android:textStyle="normal"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="glandular tissue divide into lobes(each containing lots of lobules)"
                        android:textSize="16sp"
                        android:textStyle="normal">

                    </TextView>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_below="@id/about_layout2"
                    android:layout_marginTop="80dp">

                </LinearLayout>

                <ImageView

                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_below="@+id/about_layout2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/breast"></ImageView>


            </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_about"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        android:layout_marginBottom="3dp"
        android:background="#F8D0CA"
        app:itemIconSize="40dp"
        app:itemTextColor="#AE5615"
        app:menu="@menu/about_cancer_menu">

    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>